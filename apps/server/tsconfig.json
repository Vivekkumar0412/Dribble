{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "esModuleInterop": true,
    "target": "es2017",
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": [
    "src",
    "src/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}